<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginAndSignup.LogIn"
    android:background="@color/colorAccent"
    >


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        >


        <TextView
            android:id="@+id/ttvv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Log in"
            android:fontFamily="sans-serif-medium"
            android:textSize="30sp"
            android:textColor="#000000"
            />

        <TextView
            android:id="@+id/roleTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Role"
            android:fontFamily="sans-serif-medium"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_below="@id/ttvv"
            android:layout_marginTop="25dp"
            />

        <Spinner
            android:id="@+id/roleSpin"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/roleTV"
            android:textAlignment="center"
            />


        <TextView
            android:id="@+id/emailTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="Email address"
            android:layout_below="@id/roleSpin"
            android:fontFamily="sans-serif-light"
            android:textSize="15sp"
            android:textColor="#000000"
            android:layout_marginBottom="10dp"

            />


        <EditText
            android:id="@+id/emailET"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/et_bg"
            android:fontFamily="sans-serif-light"
            android:layout_below="@id/emailTV"
            android:inputType="textEmailAddress"
            android:padding="5dp"
            />



        <TextView
            android:id="@+id/passTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="Password"
            android:layout_below="@id/emailET"
            android:fontFamily="sans-serif-light"
            android:textSize="15sp"
            android:textColor="#000000"
            android:layout_marginBottom="10dp"
            />


        <EditText
            android:id="@+id/passET"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/et_bg"
            android:fontFamily="sans-serif-light"
            android:layout_below="@id/passTV"
            android:inputType="textPassword"
            android:padding="5dp"
            />

        <Button
            android:id="@+id/loginBtnLogAct"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:fontFamily="sans-serif-medium"
            android:paddingLeft="70dp"
            android:paddingRight="70dp"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="16sp"
            android:background="@drawable/btn2_bg"
            android:text="Log in"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/passET"
            android:layout_marginTop="60dp"/>


</RelativeLayout>


</RelativeLayout>