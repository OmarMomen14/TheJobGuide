<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginAndSignup.LogIn">


    <TextView
        android:id="@+id/roleTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:text="Choose Role"/>

    <Spinner
        android:id="@+id/roleSpin"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/roleTV"
        />


    <TextView
        android:id="@+id/emailTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Enter your email address"
        android:layout_below="@id/roleSpin"
        />


    <EditText
        android:id="@+id/emailET"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/emailTV"
        android:inputType="textEmailAddress"
        />

    <TextView
        android:id="@+id/passTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Enter your password"
        android:layout_below="@id/emailET"
        />


    <EditText
        android:id="@+id/passET"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/passTV"
        android:inputType="textPassword"
        />

    <Button
        android:id="@+id/loginBtnLogAct"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Log in"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/passET"
        android:layout_marginTop="60dp"/>




</RelativeLayout>