<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EmployerFunctions.AddJob"
    >


    <TextView
        android:id="@+id/TV1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Choose an industry field"
        android:fontFamily="sans-serif-medium"
        android:textSize="30sp"
        android:textColor="#000000"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="25dp"
        />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/TV1"
        android:stretchColumns="0,1,2"
        >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/softwareBtnAJAct"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/software_pic"
                android:layout_weight="1"
                />

            <ImageView
                android:id="@+id/datascienceAJAct"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/ds_pic"
                android:layout_weight="1"
                />

            <ImageView
                android:id="@+id/gameBtnAJAct"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/game"
                android:layout_weight="1"
                />

        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Software Development"
                android:layout_weight="1"
                android:textAlignment="center"
                android:fontFamily="sans-serif-light"
                android:textColor="#000000"
                android:textSize="15sp"
                android:paddingBottom="15dp"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Data Science"
                android:layout_weight="1"
                android:textAlignment="center"
                android:fontFamily="sans-serif-light"
                android:textColor="#000000"
                android:textSize="15sp"
                android:paddingBottom="15dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Game Development"
                android:layout_weight="1"
                android:textAlignment="center"
                android:fontFamily="sans-serif-light"
                android:textColor="#000000"
                android:textSize="15sp"
                android:paddingBottom="15dp"
                />

        </TableRow>







        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/networksBtnAJAct"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/networks"
                android:layout_weight="1"
                />

            <ImageView
                android:id="@+id/robotBtnAJAct"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/robot"
                android:layout_weight="1"
                />

            <ImageView
                android:id="@+id/copmutervisionBtnAJAct"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/computervision"
                android:layout_weight="1"
                />

        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Networks"
                android:layout_weight="1"
                android:textAlignment="center"
                android:fontFamily="sans-serif-light"
                android:textColor="#000000"
                android:textSize="15sp"
                android:paddingBottom="15dp"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Robotics"
                android:layout_weight="1"
                android:textAlignment="center"
                android:fontFamily="sans-serif-light"
                android:textColor="#000000"
                android:textSize="15sp"
                android:paddingBottom="15dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Computer Vision"
                android:layout_weight="1"
                android:textAlignment="center"
                android:fontFamily="sans-serif-light"
                android:textColor="#000000"
                android:textSize="15sp"
                android:paddingBottom="15dp"
                />

        </TableRow>




        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/securityBtnAJAct"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/security"
                android:layout_weight="1"
                />

            <ImageView
                android:id="@+id/databaseBtnAJAct"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/database"
                android:layout_weight="1"
                />

            <ImageView
                android:id="@+id/blockchainBtnAJAct"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/blockchain"
                android:layout_weight="1"
                />

        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Security"
                android:layout_weight="1"
                android:textAlignment="center"
                android:fontFamily="sans-serif-light"
                android:textColor="#000000"
                android:textSize="15sp"
                android:paddingBottom="15dp"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Database"
                android:layout_weight="1"
                android:textAlignment="center"
                android:fontFamily="sans-serif-light"
                android:textColor="#000000"
                android:textSize="15sp"
                android:paddingBottom="15dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Blockchain"
                android:layout_weight="1"
                android:textAlignment="center"
                android:fontFamily="sans-serif-light"
                android:textColor="#000000"
                android:textSize="15sp"
                android:paddingBottom="15dp"
                />

        </TableRow>



    </TableLayout>



</RelativeLayout>