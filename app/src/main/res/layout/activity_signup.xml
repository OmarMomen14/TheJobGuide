<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/colorAccent"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".LoginAndSignup.SignUp"
            >



            <TextView
                android:id="@+id/signupTVV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Sign up"
                android:fontFamily="sans-serif-medium"
                android:textSize="30sp"
                android:textColor="#000000"
                android:layout_marginTop="20dp"

                />

            <TextView
                android:id="@+id/roleTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Please Choose a role"
                android:layout_below="@+id/signupTVV"
                android:layout_marginTop="30dp"
                android:fontFamily="sans-serif-medium"
                android:textSize="16sp"
                android:textColor="#000000"
                />

            <Spinner
                android:id="@+id/roleSpin"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/roleTV"
                />


            <TextView
                android:id="@+id/fnameTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"

                android:text="First Name"
                android:layout_marginTop="30dp"
                android:fontFamily="sans-serif-light"
                android:textSize="15sp"
                android:textColor="#000000"
                android:layout_below="@id/roleSpin"
                />


            <EditText
                android:id="@+id/fnameET"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/et_bg"
                android:fontFamily="sans-serif-light"
                android:layout_below="@id/fnameTV"
                android:inputType="textPersonName"
                android:padding="5dp"
                />

            <TextView
                android:id="@+id/lnameTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:text="Last Name"
                android:layout_below="@id/fnameET"
                android:fontFamily="sans-serif-light"
                android:textSize="15sp"
                android:textColor="#000000"
                />


            <EditText
                android:id="@+id/lnameET"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/et_bg"
                android:fontFamily="sans-serif-light"
                android:layout_below="@id/lnameTV"
                android:inputType="textPersonName"
                android:padding="5dp"
                />



            <TextView
                android:id="@+id/emailTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:text="Enter your email address"
                android:layout_below="@id/lnameET"
                android:fontFamily="sans-serif-light"
                android:textSize="15sp"
                android:textColor="#000000"
                />


            <EditText
                android:id="@+id/emailET"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/et_bg"
                android:fontFamily="sans-serif-light"
                android:layout_below="@id/emailTV"
                android:inputType="textEmailAddress"
                android:padding="5dp"
                />


            <TextView
                android:id="@+id/phoneTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:text="Enter your Phone number"
                android:layout_below="@id/emailET"
                android:fontFamily="sans-serif-light"
                android:textSize="15sp"
                android:textColor="#000000"
                />


            <EditText
                android:id="@+id/phoneET"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/et_bg"
                android:fontFamily="sans-serif-light"
                android:layout_below="@id/phoneTV"
                android:inputType="phone"
                android:padding="5dp"
                />


            <TextView
                android:id="@+id/passTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:text="Enter your password"
                android:layout_below="@id/phoneET"
                android:fontFamily="sans-serif-light"
                android:textSize="15sp"
                android:textColor="#000000"
                />


            <EditText
                android:id="@+id/passET"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/et_bg"
                android:fontFamily="sans-serif-light"
                android:layout_below="@id/passTV"
                android:inputType="textPassword"
                android:padding="5dp"
                />

            <Button
                android:id="@+id/signupBtnSignAct"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:fontFamily="sans-serif-medium"
                android:paddingLeft="70dp"
                android:paddingRight="70dp"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="16sp"
                android:background="@drawable/btn2_bg"
                android:text="Sign up"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/passET"
                android:layout_marginTop="60dp"/>

        </RelativeLayout>

    </LinearLayout>


</ScrollView>