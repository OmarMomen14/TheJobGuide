<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grad_bg"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/logoMainAct"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"/>


    <TextView
        android:id="@+id/logotv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The Job Guide"
        android:fontFamily="sans-serif-medium"
        android:layout_below="@+id/logoMainAct"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:layout_marginTop="15dp"
        />
    <Button
        android:id="@+id/loginBtnMainAct"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:fontFamily="sans-serif-medium"
        android:paddingLeft="70dp"
        android:paddingRight="70dp"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:background="@drawable/btn_bg"
        android:text="Log In"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/logotv"
        android:layout_marginTop="60dp"

        />

    <Button
        android:id="@+id/signupBtnMainAct"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:fontFamily="sans-serif-medium"
        android:paddingLeft="70dp"
        android:paddingRight="70dp"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:background="@drawable/btn_bg"
        android:text="Sign Up"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/loginBtnMainAct"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/guestBtnMainAct"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:fontFamily="sans-serif-medium"
        android:paddingLeft="70dp"
        android:paddingRight="70dp"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:background="@drawable/btn_bg"
        android:text="Complete as guest"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/signupBtnMainAct"
        android:layout_marginTop="20dp"/>



</RelativeLayout>